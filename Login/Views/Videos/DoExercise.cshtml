@model IEnumerable<Login.Models.Video>

@{
    ViewBag.Title = "DoExercise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#myPage">DRAGON GYM</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li>@Html.ActionLink("Khách hàng", "Index", "KHACHHANGs")</li>
                <li>@Html.ActionLink("Nhân viên", "Index", "NHANVIENs")</li>
                <li>@Html.ActionLink("Thiết bị", "Index", "THIETBIs")</li>
                <li>@Html.ActionLink("Khuyến mãi", "Index", "KHUYENMAIs")</li>
                <li class="active">@Html.ActionLink("Videos", "Index", "Videos")</li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid" style=" background-image: url('/Content/images/background.jpg'); width: 100%; height:750px;">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8"><h1 style="color: whitesmoke">Tap the duc</h1></div>
            </div>

            <button type="button" class="btn btn-default " style="color:black">
                @Html.ActionLink("Danh sach Video", "Index")
            </button>
            <button type="button" class="btn btn-default " style="color:black" onclick="searchVideo(-1)">
                View All Videos
            </button>
            <br />

        </div>

        <div class="container" style="margin-top: 50px; width: 1170px;">
            <div class="col-sm-6">
                <img src="~/Content/images/bodyBuilding.jpg" style="max-width: 270px;" />
                <div onclick="searchVideo(0)" id="head" style="width: 59px; height: 75px; position: absolute; top: 3px; left: 115px;"></div>
                <div onclick="searchVideo(1)" id="body" style="width: 124px; height: 149px; position: absolute; top: 79px; left: 89px;"></div>
                <div onclick="searchVideo(2)" id="hand-left" style="width: 74px; height: 149px; position: absolute; top: 79px; left: 13px;"></div>
                <div onclick="searchVideo(2)" id="hand-right" style="width: 74px; height: 149px; position: absolute; top: 79px;left: 214px;"></div>
                <div onclick="searchVideo(3)" id="knee" style="width: 152px; height: 269px; position: absolute; top: 237px; left: 76px;"></div>
            </div>
            <div class="col-sm-6 table-content" style="overflow: auto; max-height: 500px; padding: 0;">
                @{ Html.RenderAction("SearchVideo", "Videos", new { bodyType = -1 }); }
            </div>
        </div>

    </div>
</div>


<script>
    $(document).ready(function () {
      
    });
      function searchVideo(bodyType) {
          $.post('@Url.Action("SearchVideo", "Videos")', { bodyType: bodyType }, function (data) {
                $(".table-content").empty();
                $(".table-content").html(data);
            });
        }
</script>