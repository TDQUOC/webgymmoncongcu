@model IEnumerable<Login.Models.KHUYENMAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#myPage">DRAGON GYM</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li>@Html.ActionLink("Khách hàng", "Index", "KHACHHANGs")</li>
                <li>@Html.ActionLink("Nhân viên", "Index", "NHANVIENs")</li>
                <li>@Html.ActionLink("Thiết bị", "Index", "THIETBIs")</li>
                <li class="active">@Html.ActionLink("Khuyến mãi", "Index", "KHUYENMAIs")</li>
            </ul>

        </div>
    </div>
</nav>

<div class="container-fluid" style=" background-image: url('/Content/images/background.jpg'); width: 100%; height:750px;">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8"><h1 style="color: whitesmoke">QUẢN LÝ CHƯƠNG TRÌNH KHUYẾN MÃI</h1></div>
            </div>
            <button type="button" class="btn btn-default " style="color:black">
                <i class="fa fa-plus" aria-hidden="true"></i> @Html.ActionLink("Thêm mới", "Create")
            </button>
        </div>
        <br />
        <table class="table table-bordered">
            <tr class="table">
                <th>
                    @Html.DisplayNameFor(model => model.mact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tenct)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.noidung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.doituong)
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="table">
                    <td>
                        @Html.DisplayFor(modelItem => item.mact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tenct)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.noidung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.doituong)
                    </td>
                    <td>
                        <button type="button" class="btn btn-default" style="font-size: large;color:black">
                            <i class="fa fa-wrench" aria-hidden="true"></i> @Html.ActionLink("Sửa", "Edit", new { id = item.mact })
                        </button>
                        <button type="button" class="btn btn-default" style="font-size: large;color:black">
                            <i class="fa fa-info" aria-hidden="true"></i> @Html.ActionLink("Chi tiết", "Details", new { id = item.mact })
                        </button>
                        <button type="button" class="btn btn-default" style="font-size:large;color:black">
                            <i class="fa fa-trash-o" aria-hidden="true"></i> @Html.ActionLink("Xóa", "Delete", new { id = item.mact })
                        </button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
